                  <button class="btn btn-default btn-lg ng-pristine ng-valid number_bets" type="button" ng-model="dice" value="Place Bet" ng-click="place_bet_on_6_button();"><span class="badge">{{ place_bet_on_the_6 }}</span></button>
                  <button class="btn btn-default btn-lg ng-pristine ng-valid number_bets" type="button" ng-model="dice" value="Place Bet" ng-click="place_bet_on_8_button();"><span class="badge">{{ place_bet_on_the_8 }}</span></button>
                  <button class="btn btn-default btn-lg ng-pristine ng-valid number_bets" type="button" ng-model="dice" value="Place Bet" ng-click="place_bet_on_9_button();"><span class="badge">{{ place_bet_on_the_9 }}</span></button>
                  <button class="btn btn-default btn-lg ng-pristine ng-valid number_bets" type="button" ng-model="dice" value="Place Bet" ng-click="place_bet_on_10_button();"><span class="badge">{{ place_bet_on_the_10 }}</span></button>
                </div>
              </center>
